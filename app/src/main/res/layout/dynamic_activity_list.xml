<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DynamicList"
    android:orientation="vertical"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activities List"
            android:textSize="22dp"
            android:textColor="@color/dark_grey"
            android:paddingLeft="@dimen/cardview_compat_inset_shadow"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/listView_list"
                android:choiceMode="multipleChoice"
                ></ListView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_dynamic_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_primary"
            android:backgroundTint="#57FFFFFF"
            android:paddingRight="16dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_menu_add"></Button>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_primary"
            android:backgroundTint="#57FFFFFF"
            android:paddingRight="16dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_menu_set_as"></Button>

        <EditText
            android:id="@+id/etSaveTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>
</ScrollView>